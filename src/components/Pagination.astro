---
const { page } = Astro.props;

// Helper untuk membuat array halaman (1, ..., 4, 5, 6, ..., 10)
const generatePageNumbers = (current: number, total: number) => {
  if (total <= 1) return [1];

  const center = [current - 2, current - 1, current, current + 1, current + 2];
  const filteredCenter: any[] = center.filter((p) => p > 1 && p < total);
  const includeThreeLeft = current === 5;
  const includeThreeRight = current === total - 4;
  const includeLeftDots = current > 5;
  const includeRightDots = current < total - 4;

  if (includeThreeLeft) filteredCenter.unshift(2);
  if (includeThreeRight) filteredCenter.push(total - 1);

  if (includeLeftDots) filteredCenter.unshift("...");
  if (includeRightDots) filteredCenter.push("...");

  return [1, ...filteredCenter, total];
};

// Safety check: pastikan 'page' ada sebelum mengakses property-nya
const pageNumbers = page
  ? generatePageNumbers(page.currentPage, page.lastPage)
  : [];
---

{
  page && page.lastPage > 1 && (
    <nav
      role="navigation"
      aria-label="Pagination Navigation"
      class="flex items-center justify-between py-4"
    >
      {/* Mobile View */}
      <div class="flex flex-col w-full sm:hidden">
        <div class="flex justify-between flex-1">
          {!page.url.prev ? (
            <span class="relative inline-flex items-center px-4 py-2 text-sm font-medium text-gray-300 bg-white border border-gray-200 rounded-lg cursor-not-allowed select-none dark:bg-gray-800 dark:border-gray-700 dark:text-gray-600">
              Previous
            </span>
          ) : (
            <a
              href={page.url.prev}
              class="relative inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 active:bg-gray-100 transition duration-150 ease-in-out dark:bg-gray-800 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-700 dark:active:bg-gray-600"
            >
              Previous
            </a>
          )}

          {page.url.next ? (
            <a
              href={page.url.next}
              class="relative inline-flex items-center px-4 py-2 ml-3 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 active:bg-gray-100 transition duration-150 ease-in-out dark:bg-gray-800 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-700 dark:active:bg-gray-600"
            >
              Next
            </a>
          ) : (
            <span class="relative inline-flex items-center px-4 py-2 ml-3 text-sm font-medium text-gray-300 bg-white border border-gray-200 rounded-lg cursor-not-allowed select-none dark:bg-gray-800 dark:border-gray-700 dark:text-gray-600">
              Next
            </span>
          )}
        </div>

        <div class="mt-3 text-center">
          <p class="text-xs text-gray-500 dark:text-gray-400">
            Page{" "}
            <span class="font-medium text-gray-700 dark:text-gray-200">
              {page.currentPage}
            </span>
            of{" "}
            <span class="font-medium text-gray-700 dark:text-gray-200">
              {page.lastPage}
            </span>
          </p>
        </div>
      </div>

      {/* Desktop View */}
      <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
        <div>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            Showing
            <span class="font-semibold text-gray-900 dark:text-white ml-1">
              {page.start + 1}
            </span>
            to
            <span class="font-semibold text-gray-900 dark:text-white ml-1">
              {page.end + 1}
            </span>
            of
            <span class="font-semibold text-gray-900 dark:text-white ml-1">
              {page.total}
            </span>
            results
          </p>
        </div>

        <div>
          <span
            class="isolate inline-flex -space-x-px rounded-md shadow-sm bg-white dark:bg-gray-800"
            aria-label="Pagination"
          >
            {/* Desktop Previous */}
            {!page.url.prev ? (
              <span class="relative inline-flex items-center px-2 py-2 text-gray-300 bg-white border border-gray-300 rounded-l-md cursor-not-allowed dark:bg-gray-800 dark:border-gray-600 dark:text-gray-600">
                <span class="sr-only">Previous</span>
                <svg
                  class="w-5 h-5"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z"
                    clip-rule="evenodd"
                  />
                </svg>
              </span>
            ) : (
              <a
                href={page.url.prev}
                class="relative inline-flex items-center px-2 py-2 text-gray-500 bg-white border border-gray-300 rounded-l-md hover:bg-gray-50 hover:text-[rgb(var(--color-primary-rgb))] focus:z-20 focus:outline-offset-0 transition dark:bg-gray-800 dark:border-gray-600 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"
              >
                <span class="sr-only">Previous</span>
                <svg
                  class="w-5 h-5"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z"
                    clip-rule="evenodd"
                  />
                </svg>
              </a>
            )}

            {/* Numbers Loop */}
            {pageNumbers.map((num) => {
              if (num === "...") {
                return (
                  <span class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-700 border border-gray-300 bg-gray-50 dark:bg-gray-700 dark:border-gray-600 dark:text-gray-400">
                    ...
                  </span>
                );
              }

              return num === page.currentPage ? (
                <span
                  aria-current="page"
                  class="relative z-10 inline-flex items-center px-4 py-2 text-sm font-semibold text-white bg-[rgb(var(--color-primary-rgb))] border border-[rgb(var(--color-primary-rgb))] focus:z-20 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[rgb(var(--color-primary-rgb))]"
                >
                  {num}
                </span>
              ) : (
                <a
                  href={num === 1 ? "/blog" : `/blog/${num}`}
                  class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-900 bg-white border border-gray-300 hover:bg-[rgba(var(--color-primary-rgb),0.08)] hover:text-[rgb(var(--color-primary-rgb))] hover:border-[rgb(var(--color-primary-rgb))] focus:z-20 focus:outline-offset-0 transition duration-150 dark:bg-gray-800 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-700 dark:hover:text-white dark:hover:border-gray-500"
                >
                  {num}
                </a>
              );
            })}

            {/* Desktop Next */}
            {page.url.next ? (
              <a
                href={page.url.next}
                class="relative inline-flex items-center px-2 py-2 text-gray-500 bg-white border border-gray-300 rounded-r-md hover:bg-gray-50 hover:text-[rgb(var(--color-primary-rgb))] focus:z-20 focus:outline-offset-0 transition dark:bg-gray-800 dark:border-gray-600 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"
              >
                <span class="sr-only">Next</span>
                <svg
                  class="w-5 h-5"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
                    clip-rule="evenodd"
                  />
                </svg>
              </a>
            ) : (
              <span class="relative inline-flex items-center px-2 py-2 text-gray-300 bg-white border border-gray-300 rounded-r-md cursor-not-allowed dark:bg-gray-800 dark:border-gray-600 dark:text-gray-600">
                <span class="sr-only">Next</span>
                <svg
                  class="w-5 h-5"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
                    clip-rule="evenodd"
                  />
                </svg>
              </span>
            )}
          </span>
        </div>
      </div>
    </nav>
  )
}

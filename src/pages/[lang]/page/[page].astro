---
import { getCollection } from "astro:content";
import Layout from "../../../layouts/Base.astro";
import { createTranslator } from "../../../locales";
import Pagination from "../../../components/Pagination.astro";
import { createSlug } from "../../../utils/slug";

export async function getStaticPaths() {
  const langs = ["id", "en"];
  const allPosts = await getCollection("blog");
  const PAGE_SIZE = 6;
  const total = allPosts.length;
  const lastPage = Math.ceil(total / PAGE_SIZE);

  const paths = [];
  for (const lang of langs) {
    for (let page = 2; page <= lastPage; page++) {
      paths.push({
        params: { lang, page: page.toString() },
        props: { pageNumber: page },
      });
    }
  }
  return paths;
}

const { lang, page: pageParam } = Astro.params;
const pageNumber = parseInt(pageParam);
const __ = createTranslator(lang as "id" | "en");

const PAGE_SIZE = 7;
const currentPage = pageNumber;

const allPosts = await getCollection("blog");
const total = allPosts.length;
const lastPage = Math.ceil(total / PAGE_SIZE);

const start = (currentPage - 1) * PAGE_SIZE;
const end = start + PAGE_SIZE;

const page = {
  currentPage,
  lastPage,
  total,
  start,
  end: Math.min(end, total) - 1,
  data: allPosts.slice(start, end),
  url: {
    prev: currentPage > 2 ? `/${lang}/page/${currentPage - 1}` : `/${lang}`,
    next: currentPage < lastPage ? `/${lang}/page/${currentPage + 1}` : null,
  },
};

const latestPost = page.data[0];
const posts = page.data.slice(1);
const author = {
  name: "Fiandev",
  gravatar: "https://github.com/fiandev.png",
  bio: "",
};

const formatDate = (date: Date) =>
  new Date(date).toLocaleDateString(lang === "id" ? "id-ID" : "en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
---

<Layout title="Home">
  <div
    class="container mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8 py-8 md:py-12"
  >
    {/* Featured Post Section */}
    {
      latestPost && (
        <section class="mb-12" data-aos="fade-in">
          <h2 class="text-3xl md:text-4xl font-extrabold text-gray-900 dark:text-white mb-6">
            {__("Featured Post")}
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center bg-white dark:bg-gray-800 rounded-2xl shadow-lg overflow-hidden">
            <div class="order-2 md:order-1 p-6 md:p-10 flex flex-col gap-4 justify-center">
              <h3 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white leading-tight hover:text-indigo-700 dark:hover:text-indigo-300 transition-colors">
                <a
                  class="line-clamp-2"
                  href={`/${lang}/blogs/${latestPost.data.slug}`}
                >
                  {latestPost.data.title}
                </a>
              </h3>

              {/* Menggunakan 'categories' sesuai permintaan, bukan tags */}
              <div class="flex items-center gap-2 overflow-scroll text-xs whitespace-nowrap mb-4">
                {latestPost.data.categories?.map((category: any) => (
                  <a
                    href={`/categories/${createSlug(category)}`}
                    class="h-6 flex items-center justify-center text-teal-800 dark:text-teal-200 capitalize hover:text-teal-800/60 dark:hover:text-teal-200/60 transition-colors bg-teal-200/40 dark:bg-teal-800/40 rounded-full py-2 px-4"
                  >
                    {category}
                  </a>
                ))}
              </div>

              <p class="text-gray-600 dark:text-gray-300 line-clamp-3">
                {latestPost.data.description}
              </p>
              <div class="flex items-center">
                <p class="text-sm text-gray-500 dark:text-gray-400">
                  {formatDate(latestPost.data.pubDate)}
                </p>
              </div>
            </div>

            <div
              class="order-1 md:order-2 w-full h-64 bg-gray-400 dark:bg-gray-600 lg:h-full bg-cover bg-center"
              style={`background-image: url('${latestPost.data.heroImage?.src || "/placeholder.jpg"}');`}
            />
          </div>
        </section>
      )
    }

    <div class="grid grid-cols-1 lg:grid-cols-3 lg:gap-12">
      {/* Main Content: Latest Posts Grid */}
      <main class="lg:col-span-2">
        <h2
          class="text-3xl font-extrabold text-gray-900 dark:text-white mb-6"
          data-aos="fade-up"
        >
          {__("Latest Posts")}
        </h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
          {
            posts.length > 0 ? (
              posts.map((post, index) => (
                <div
                  class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg overflow-hidden transform hover:-translate-y-1.5 transition-transform duration-300"
                  data-aos="fade-up"
                  data-aos-delay={(index % 2) * 100}
                >
                      <a href={`/${lang}/blogs/${post.data.slug}`}>
                    <img
                      class="w-full h-48 object-cover"
                      src={post.data.heroImage?.src || "/placeholder.jpg"}
                      alt={post.data.title}
                      width="400"
                      height="300"
                      loading="lazy"
                    />
                  </a>
                  <div class="p-6 flex flex-col gap-4">
                    <h4 class="mt-2 font-bold text-xl line-clamp-3 h-24 overflow-hidden text-gray-900 dark:text-white leading-tight hover:text-indigo-700 dark:hover:text-indigo-300 transition-colors">
                  <a href={`/${lang}/blogs/${post.data.slug}`}>
                        {post.data.title}
                      </a>
                    </h4>

                    <div class="flex items-center gap-2 overflow-scroll text-xs whitespace-nowrap">
                      {post.data.categories?.map((category: any) => (
                        <a
                          href={`/${lang}/categories/${createSlug(category)}`}
                          class="h-6 flex items-center justify-center text-teal-800 dark:text-teal-200 capitalize hover:text-teal-800/60 dark:hover:text-teal-200/60 transition-colors bg-teal-200/40 dark:bg-teal-800/40 rounded-full py-2 px-4"
                        >
                          {category}
                        </a>
                      ))}
                    </div>

                    <p class="mt-2 text-gray-600 dark:text-gray-300 text-sm line-clamp-2">
                      {post.data.description}
                    </p>

                    <div class="flex w-full items-center justify-between gap-4">
                      <div class="text-xs text-gray-500 dark:text-gray-400">
                        <span>{formatDate(post.data.pubDate)}</span>
                      </div>
                      {/* Mengembalikan variabel read_time sesuai permintaan */}
                      <div class="text-xs text-gray-500 dark:text-gray-400">
                        {post.data.read_time} read
                      </div>
                    </div>
                  </div>
                </div>
              ))
            ) : (
              <p class="text-gray-600 dark:text-gray-300 col-span-2">
                {__("No posts available.")}
              </p>
            )
          }
        </div>

        <div class="mt-8">
          <Pagination page={page} lang={lang} />
        </div>
      </main>

      {/* Sidebar */}
      <aside class="mt-12 lg:mt-0 w-full lg:w-80 flex-shrink-0 px-4 lg:px-0">
        <div class="lg:sticky top-24">
          <div
            class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 text-center"
            data-aos="fade-up"
          >
            <img
              class="w-24 h-24 rounded-full mx-auto object-cover ring-4 ring-indigo-200"
              src={author.gravatar || "https://via.placeholder.com/150"}
              alt={author.name}
              width="96"
              height="96"
              loading="lazy"
              data-aos="zoom-in"
              data-aos-delay="100"
            />
            <h4
              class="mt-4 text-xl font-bold text-gray-900 dark:text-white"
              data-aos="fade-up"
              data-aos-delay="200"
            >
              {author.name}
            </h4>
            <p
              class="mt-4 text-gray-600 dark:text-gray-300 text-sm"
              data-aos="fade-up"
              data-aos-delay="400"
            >
              {author.bio || __("No bio available.")}
            </p>
          </div>
        </div>
      </aside>
    </div>
  </div>
</Layout>
